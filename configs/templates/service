[Unit]
Description=ngs_{{.NameProject}} daemon
Requires=ngs_{{.NameProject}}.socket
After=network.target

[Service]
WorkingDirectory=/opt/ngs/development/{{.NameProject}}/{{.NameProject}}
ExecStart=/opt/ngs/development/{{.NameProject}}/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/ngs_{{.NameProject}}.sock \
          {{.NameProject}}.wsgi:application

[Install]
WantedBy=multi-user.target